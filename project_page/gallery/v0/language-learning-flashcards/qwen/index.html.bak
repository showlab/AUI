<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Language Flashcards</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 1280px;
            text-align: center;
        }

        .screen {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            transition: all 0.5s ease;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
            font-size: 2.5rem;
        }

        .language-selector {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
            margin: 30px 0;
        }

        .language-btn {
            padding: 15px 25px;
            font-size: 1.1rem;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            background: #4a6fa5;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .language-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .language-btn.active {
            background: #ff6b6b;
            transform: scale(1.05);
        }

        .flashcard-container {
            perspective: 1000px;
            margin: 40px auto;
            width: 300px;
            height: 200px;
        }

        .flashcard {
            position: relative;
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.8s;
            cursor: pointer;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .flashcard.flipped {
            transform: rotateY(180deg);
        }

        .flashcard-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-radius: 15px;
        }

        .flashcard-front {
            background: linear-gradient(45deg, #3498db, #8e44ad);
            color: white;
        }

        .flashcard-back {
            background: linear-gradient(45deg, #2ecc71, #f39c12);
            color: white;
            transform: rotateY(180deg);
        }

        .controls {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .control-btn {
            padding: 12px 25px;
            font-size: 1rem;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            background: #3498db;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .control-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .control-btn#shuffle-btn {
            background: #f39c12;
        }

        .control-btn#learned-btn {
            background: #2ecc71;
        }

        .progress-bar {
            height: 10px;
            background: #ecf0f1;
            border-radius: 5px;
            margin: 20px 0;
            overflow: hidden;
        }

        .progress {
            height: 100%;
            background: linear-gradient(90deg, #3498db, #2ecc71);
            border-radius: 5px;
            transition: width 0.5s ease;
        }

        .counter {
            margin-top: 10px;
            font-size: 1.1rem;
            color: #333;
        }

        .instructions {
            margin-top: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            font-size: 0.9rem;
            color: #666;
        }

        @media (max-width: 768px) {
            .screen {
                padding: 20px;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            .flashcard-container {
                width: 250px;
                height: 180px;
            }
            
            .language-btn {
                padding: 12px 20px;
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .language-selector {
                flex-direction: column;
                align-items: center;
            }
            
            .controls {
                flex-direction: column;
                align-items: center;
            }
            
            .control-btn {
                width: 80%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div id="main-screen" class="screen">
            <h1 id="welcome-title">Language Flashcards</h1>
            <p id="select-language">Select a language to start learning:</p>
            
            <div class="language-selector">
                <button id="english-btn" class="language-btn" data-lang="en">English</button>
                <button id="spanish-btn" class="language-btn" data-lang="es">Spanish</button>
                <button id="french-btn" class="language-btn" data-lang="fr">French</button>
                <button id="japanese-btn" class="language-btn" data-lang="ja">Japanese</button>
            </div>
            
            <div class="instructions">
                <p id="instructions-text">Click on a card to flip it and see the translation. Use the buttons below to shuffle cards or mark them as learned.</p>
            </div>
        </div>
        
        <div id="flashcard-screen" class="screen" style="display: none;">
            <h1 id="current-language-title"></h1>
            
            <div class="flashcard-container">
                <div id="flashcard" class="flashcard">
                    <div class="flashcard-face flashcard-front">
                        <p id="front-text"></p>
                    </div>
                    <div class="flashcard-face flashcard-back">
                        <p id="back-text"></p>
                    </div>
                </div>
            </div>
            
            <div class="progress-bar">
                <div id="progress" class="progress"></div>
            </div>
            
            <div class="counter">
                <span id="counter-text"></span>
            </div>
            
            <div class="controls">
                <button id="shuffle-btn" class="control-btn">Shuffle Cards</button>
                <button id="learned-btn" class="control-btn">Mark as Learned</button>
                <button id="back-btn" class="control-btn">Back to Languages</button>
            </div>
        </div>
    </div>

    <script>
        // Language data with travel phrases
        const languageData = {
            en: {
                name: "English",
                phrases: [
                    { front: "Hello", back: "Hola" },
                    { front: "Thank you", back: "Gracias" },
                    { front: "Excuse me", back: "Disculpe" },
                    { front: "Where is the bathroom?", back: "¿Dónde está el baño?" },
                    { front: "How much does this cost?", back: "¿Cuánto cuesta esto?" },
                    { front: "I don't understand", back: "No entiendo" },
                    { front: "Can you help me?", back: "¿Puedes ayudarme?" },
                    { front: "I'm lost", back: "Estoy perdido" },
                    { front: "Do you speak English?", back: "¿Hablas inglés?" },
                    { front: "I need a doctor", back: "Necesito un médico" }
                ]
            },
            es: {
                name: "Spanish",
                phrases: [
                    { front: "Hola", back: "Hello" },
                    { front: "Gracias", back: "Thank you" },
                    { front: "Disculpe", back: "Excuse me" },
                    { front: "¿Dónde está el baño?", back: "Where is the bathroom?" },
                    { front: "¿Cuánto cuesta esto?", back: "How much does this cost?" },
                    { front: "No entiendo", back: "I don't understand" },
                    { front: "¿Puedes ayudarme?", back: "Can you help me?" },
                    { front: "Estoy perdido", back: "I'm lost" },
                    { front: "¿Hablas inglés?", back: "Do you speak English?" },
                    { front: "Necesito un médico", back: "I need a doctor" }
                ]
            },
            fr: {
                name: "French",
                phrases: [
                    { front: "Bonjour", back: "Hello" },
                    { front: "Merci", back: "Thank you" },
                    { front: "Excusez-moi", back: "Excuse me" },
                    { front: "Où est la salle de bain?", back: "Where is the bathroom?" },
                    { front: "Combien ça coûte?", back: "How much does this cost?" },
                    { front: "Je ne comprends pas", back: "I don't understand" },
                    { front: "Pouvez-vous m'aider?", back: "Can you help me?" },
                    { front: "Je suis perdu", back: "I'm lost" },
                    { front: "Parlez-vous anglais?", back: "Do you speak English?" },
                    { front: "J'ai besoin d'un médecin", back: "I need a doctor" }
                ]
            },
            ja: {
                name: "Japanese",
                phrases: [
                    { front: "こんにちは", back: "Hello" },
                    { front: "ありがとう", back: "Thank you" },
                    { front: "すみません", back: "Excuse me" },
                    { front: "トイレはどこですか？", back: "Where is the bathroom?" },
                    { front: "これはいくらですか？", back: "How much does this cost?" },
                    { front: "わかりません", back: "I don't understand" },
                    { front: "手伝っていただけますか？", back: "Can you help me?" },
                    { front: "迷子です", back: "I'm lost" },
                    { front: "英語を話しますか？", back: "Do you speak English?" },
                    { front: "医者が必要です", back: "I need a doctor" }
                ]
            }
        };

        // Translation dictionary for UI elements
        const translations = {
            en: {
                welcomeTitle: "Language Flashcards",
                selectLanguage: "Select a language to start learning:",
                instructionsText: "Click on a card to flip it and see the translation. Use the buttons below to shuffle cards or mark them as learned.",
                counterText: "Cards learned: ",
                backToLanguages: "Back to Languages"
            },
            es: {
                welcomeTitle: "Tarjetas de Repaso de Idiomas",
                selectLanguage: "Selecciona un idioma para comenzar a aprender:",
                instructionsText: "Haz clic en una tarjeta para voltearla y ver la traducción. Usa los botones abajo para barajar las tarjetas o marcarlas como aprendidas.",
                counterText: "Tarjetas aprendidas: ",
                backToLanguages: "Volver a Idiomas"
            },
            fr: {
                welcomeTitle: "Cartes Mémoire de Langue",
                selectLanguage: "Sélectionnez une langue pour commencer à apprendre:",
                instructionsText: "Cliquez sur une carte pour la retourner et voir la traduction. Utilisez les boutons ci-dessous pour mélanger les cartes ou les marquer comme apprises.",
                counterText: "Cartes apprises: ",
                backToLanguages: "Retour aux Langues"
            },
            ja: {
                welcomeTitle: "言語フラッシュカード",
                selectLanguage: "学習を始める言語を選択してください:",
                instructionsText: "カードをクリックして裏面を表示してください。カードをシャッフルしたり、学習済みとしてマークするには下のボタンを使用してください。",
                counterText: "学習済みカード: ",
                backToLanguages: "言語選択に戻る"
            }
        };

        // Get user's preferred language
        const userLang = navigator.language || navigator.userLanguage;
        let currentLanguage = userLang.split('-')[0];
        if (!languageData[currentLanguage]) {
            currentLanguage = 'en';
        }

        // DOM Elements
        const mainScreen = document.getElementById('main-screen');
        const flashcardScreen = document.getElementById('flashcard-screen');
        const welcomeTitle = document.getElementById('welcome-title');
        const selectLanguage = document.getElementById('select-language');
        const instructionsText = document.getElementById('instructions-text');
        const currentLanguageTitle = document.getElementById('current-language-title');
        const frontText = document.getElementById('front-text');
        const backText = document.getElementById('back-text');
        const progress = document.getElementById('progress');
        const counterText = document.getElementById('counter-text');
        const shuffleBtn = document.getElementById('shuffle-btn');
        const learnedBtn = document.getElementById('learned-btn');
        const backBtn = document.getElementById('back-btn');

        // Language buttons
        const languageButtons = document.querySelectorAll('.language-btn');
        const languageBtns = {
            en: document.getElementById('english-btn'),
            es: document.getElementById('spanish-btn'),
            fr: document.getElementById('french-btn'),
            ja: document.getElementById('japanese-btn')
        };

        // State variables
        let currentCardIndex = 0;
        let shuffledCards = [];
        let learnedCards = new Set();
        let currentPhraseSet = [];

        // Initialize the app
        function initApp() {
            updateUI(currentLanguage);
            setupEventListeners();
            loadLanguage(currentLanguage);
        }

        // Update UI based on selected language
        function updateUI(lang) {
            const trans = translations[lang] || translations.en;
            
            welcomeTitle.textContent = trans.welcomeTitle;
            selectLanguage.textContent = trans.selectLanguage;
            instructionsText.textContent = trans.instructionsText;
            counterText.textContent = trans.counterText;
            backBtn.textContent = trans.backToLanguages;
            
            // Update active button
            languageButtons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.lang === lang) {
                    btn.classList.add('active');
                }
            });
        }

        // Set up event listeners
        function setupEventListeners() {
            // Language selection
            languageButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const lang = button.dataset.lang;
                    currentLanguage = lang;
                    updateUI(lang);
                    loadLanguage(lang);
                });
            });

            // Flashcard interaction
            document.getElementById('flashcard').addEventListener('click', flipCard);

            // Control buttons
            shuffleBtn.addEventListener('click', shuffleCards);
            learnedBtn.addEventListener('click', markAsLearned);
            backBtn.addEventListener('click', showMainScreen);
        }

        // Load language data
        function loadLanguage(lang) {
            currentPhraseSet = languageData[lang].phrases;
            shuffledCards = [...currentPhraseSet];
            currentCardIndex = 0;
            learnedCards.clear();
            updateProgress();
            showFlashcard();
        }

        // Show main screen
        function showMainScreen() {
            mainScreen.style.display = 'block';
            flashcardScreen.style.display = 'none';
        }

        // Show flashcard screen
        function showFlashcardScreen() {
            mainScreen.style.display = 'none';
            flashcardScreen.style.display = 'block';
            currentLanguageTitle.textContent = languageData[currentLanguage].name;
            showFlashcard();
        }

        // Show current flashcard
        function showFlashcard() {
            const card = shuffledCards[currentCardIndex];
            frontText.textContent = card.front;
            backText.textContent = card.back;
            document.getElementById('flashcard').classList.remove('flipped');
        }

        // Flip the card
        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
        }

        // Shuffle cards
        function shuffleCards() {
            // Fisher-Yates shuffle algorithm
            for (let i = shuffledCards.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffledCards[i], shuffledCards[j]] = [shuffledCards[j], shuffledCards[i]];
            }
            currentCardIndex = 0;
            updateProgress();
            showFlashcard();
        }

        // Mark card as learned
        function markAsLearned() {
            learnedCards.add(currentCardIndex);
            updateProgress();
            
            // Move to next card
            currentCardIndex = (currentCardIndex + 1) % shuffledCards.length;
            showFlashcard();
        }

        // Update progress bar
        function updateProgress() {
            const progressPercent = (learnedCards.size / shuffledCards.length) * 100;
            progress.style.width = `${progressPercent}%`;
            counterText.textContent = `Cards learned: ${learnedCards.size}/${shuffledCards.length}`;
        }

        // Initialize the app when page loads
        window.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>