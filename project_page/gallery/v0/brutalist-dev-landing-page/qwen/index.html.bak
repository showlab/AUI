    <script>
        // Grid cursor tracking
        document.addEventListener('mousemove', function(e) {
            const coords = document.getElementById('cursor-coords');
            const gridWidth = 1200 / 12; // 100px per column at 1200px width
            const col = Math.floor(e.clientX / gridWidth) + 1;
            const row = Math.floor(e.clientY / 50) + 1; // Approximate row height
            coords.textContent = `Grid: ${col}, ${row}`;
        });

        // Theme toggle
        const themeToggle = document.getElementById('theme-toggle');
        themeToggle.addEventListener('click', function() {
            document.body.classList.toggle('dark-theme');
            if (document.body.classList.contains('dark-theme')) {
                this.textContent = 'Light Mode';
            } else {
                this.textContent = 'Dark Mode';
            }
        });

        // Tab switching
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                const lang = this.getAttribute('data-lang');
                const parentCard = this.closest('.card');
                const tabButtons = parentCard.querySelectorAll('.tab');
                const codeBlocks = parentCard.querySelectorAll('.code-block');
                const copyBtn = parentCard.querySelector('.copy-btn');

                // Update active tab
                tabButtons.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                // Show corresponding code block
                codeBlocks.forEach(block => {
                    if (block.classList.contains(`${lang}-code`)) {
                        block.classList.remove('hidden');
                    } else {
                        block.classList.add('hidden');
                    }
                });

                // Update copy button data attribute
                copyBtn.setAttribute('data-lang', lang);
            });
        });

        // Copy to clipboard functionality
        const copyButtons = document.querySelectorAll('.copy-btn');
        copyButtons.forEach(button => {
            button.addEventListener('click', function() {
                const lang = this.getAttribute('data-lang');
                const codeBlock = this.closest('.card').querySelector(`.${lang}-code`);
                const text = codeBlock.textContent;
                
                navigator.clipboard.writeText(text).then(() => {
                    const originalText = this.textContent;
                    this.textContent = this.getAttribute('data-tooltip');
                    
                    setTimeout(() => {
                        this.textContent = originalText;
                    }, 2000);
                });
            });
        });

        // Pricing plan buttons
        const pricingButtons = document.querySelectorAll('[data-plan]');
        pricingButtons.forEach(button => {
            button.addEventListener('click', function() {
                const plan = this.getAttribute('data-plan');
                alert(`Redirecting to sign up for ${plan} plan...`);
            });
        });

        // Keyboard navigation focus management
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Tab') {
                document.body.classList.add('keyboard-navigation');
            }
        });

        // Initialize with keyboard navigation class
        document.body.classList.add('keyboard-navigation');
    </script>
