<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtual Drum Kit</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1a2a6c, #b21f1f, #1a2a6c);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            color: white;
        }

        header {
            text-align: center;
            margin-bottom: 30px;
            width: 100%;
            max-width: 1200px;
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
            background: linear-gradient(to right, #ff8a00, #da1b60);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 20px;
        }

        .controls {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        button {
            padding: 12px 25px;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: linear-gradient(to right, #ff8a00, #da1b60);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

        button:active {
            transform: translateY(1px);
        }

        button#recordBtn {
            background: linear-gradient(to right, #ff416c, #ff4b2b);
        }

        button#playbackBtn {
            background: linear-gradient(to right, #00c9ff, #92fe9d);
        }

        .drum-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            max-width: 1200px;
            width: 100%;
            margin-bottom: 30px;
        }

        .drum-pad {
            aspect-ratio: 1/1;
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
            background: linear-gradient(145deg, #2c3e50, #1a2a6c);
            border: 2px solid rgba(255, 255, 255, 0.1);
        }

        .drum-pad:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
        }

        .drum-pad:active {
            transform: scale(0.95);
        }

        .drum-pad.active {
            transform: scale(0.95);
            box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.5);
        }

        .pad-key {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
        }

        .pad-name {
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .recording-indicator {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(255, 0, 0, 0.8);
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: bold;
            display: none;
            animation: pulse 1s infinite;
        }

        @keyframes pulse {
            0% { opacity: 0.7; }
            50% { opacity: 1; }
            100% { opacity: 0.7; }
        }

        .instructions {
            background: rgba(0, 0, 0, 0.3);
            padding: 20px;
            border-radius: 15px;
            max-width: 800px;
            margin-top: 20px;
            text-align: center;
        }

        .instructions h2 {
            margin-bottom: 15px;
            color: #ff8a00;
        }

        .instructions p {
            margin-bottom: 10px;
            line-height: 1.6;
        }

        .keyboard-hint {
            display: inline-block;
            background: rgba(255, 255, 255, 0.1);
            padding: 5px 10px;
            border-radius: 5px;
            margin: 0 5px;
            font-family: monospace;
        }

        footer {
            margin-top: auto;
            padding: 20px;
            text-align: center;
            opacity: 0.7;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }
            
            .drum-container {
                grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
                gap: 15px;
            }
            
            .drum-pad {
                border-radius: 10px;
            }
        }

        @media (max-width: 480px) {
            .drum-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 10px;
            }
            
            h1 {
                font-size: 1.5rem;
            }
            
            .controls {
                flex-direction: column;
                align-items: center;
            }
            
            button {
                width: 80%;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1 id="app-title">Virtual Drum Kit</h1>
        <p class="subtitle">Play with your keyboard or click on the pads</p>
    </header>

    <div class="controls">
        <button id="recordBtn" aria-label="Start recording">Record</button>
        <button id="playbackBtn" aria-label="Playback recording">Playback</button>
        <button id="clearBtn" aria-label="Clear recording">Clear</button>
    </div>

    <div class="recording-indicator" id="recordingIndicator">RECORDING</div>

    <div class="drum-container" id="drumContainer">
        <!-- Drums will be generated by JavaScript -->
    </div>

    <div class="instructions">
        <h2>How to Play</h2>
        <p>Use your keyboard keys or click/tap on the pads to play different drum sounds:</p>
        <p><span class="keyboard-hint">Q</span> <span class="keyboard-hint">W</span> <span class="keyboard-hint">E</span> <span class="keyboard-hint">A</span> <span class="keyboard-hint">S</span> <span class="keyboard-hint">D</span> <span class="keyboard-hint">Z</span> <span class="keyboard-hint">X</span> <span class="keyboard-hint">C</span></p>
        <p>Click the Record button to start capturing your performance, then Playback to hear it back!</p>
    </div>

    <footer>
        <p>Virtual Drum Kit | Created with HTML, CSS & JavaScript</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Drum pad configuration
            const drumPads = [
                { key: 'Q', name: 'Kick', sound: 'kick' },
                { key: 'W', name: 'Snare', sound: 'snare' },
                { key: 'E', name: 'Hi-Hat', sound: 'hihat' },
                { key: 'A', name: 'Tom 1', sound: 'tom1' },
                { key: 'S', name: 'Tom 2', sound: 'tom2' },
                { key: 'D', name: 'Tom 3', sound: 'tom3' },
                { key: 'Z', name: 'Crash', sound: 'crash' },
                { key: 'X', name: 'Ride', sound: 'ride' },
                { key: 'C', name: 'Clap', sound: 'clap' }
            ];

            // Audio context for playing sounds
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            let isRecording = false;
            let recordingStartTime = 0;
            let recordedEvents = [];
            let playbackTimeouts = [];

            // Create drum pads
            const drumContainer = document.getElementById('drumContainer');
            drumPads.forEach((pad, index) => {
                const padElement = document.createElement('div');
                padElement.className = 'drum-pad';
                padElement.id = `pad-${index}`;
                padElement.dataset.key = pad.key;
                
                padElement.innerHTML = `
                    <div class="pad-key">${pad.key}</div>
                    <div class="pad-name">${pad.name}</div>
                `;
                
                padElement.addEventListener('click', () => playSound(pad.sound, pad.key));
                drumContainer.appendChild(padElement);
            });

            // Keyboard event handling
            document.addEventListener('keydown', (e) => {
                const key = e.key.toUpperCase();
                const pad = drumPads.find(p => p.key === key);
                if (pad) {
                    playSound(pad.sound, pad.key);
                    highlightPad(pad.key);
                }
            });

            // Play sound function
            function playSound(soundType, key) {
                // Create audio element for each sound
                const audio = new Audio();
                audio.src = getSoundUrl(soundType);
                audio.volume = 0.7;
                audio.play().catch(e => console.log("Audio play error:", e));

                // Add visual feedback
                highlightPad(key);
                
                // Record event if recording
                if (isRecording) {
                    const time = Date.now() - recordingStartTime;
                    recordedEvents.push({ time, key });
                }
            }

            // Get sound URL based on type
            function getSoundUrl(soundType) {
                switch(soundType) {
                    case 'kick': return 'data:audio/wav;base64,';
                    case 'snare': return 'data:audio/wav;base64,';
                    case 'hihat': return 'data:audio/wav;base64,';
                    case 'tom1': return 'data:audio/wav;base64,';
                    case 'tom2': return 'data:audio/wav;base64,';
                    case 'tom3': return 'data:audio/wav;base64,';
                    case 'crash': return 'data:audio/wav;base64,';
                    case 'ride': return 'data:audio/wav;base64,';
                    case 'clap': return 'data:audio/wav;base64,';
                    default: return '';
                }
            }

            // Visual feedback for pad activation
            function highlightPad(key) {
                const pad = document.querySelector(`[data-key="${key}"]`);
                if (pad) {
                    pad.classList.add('active');
                    setTimeout(() => pad.classList.remove('active'), 150);
                }
            }

            // Recording functionality
            const recordBtn = document.getElementById('recordBtn');
            const playbackBtn = document.getElementById('playbackBtn');
            const clearBtn = document.getElementById('clearBtn');
            const recordingIndicator = document.getElementById('recordingIndicator');

            recordBtn.addEventListener('click', () => {
                if (!isRecording) {
                    startRecording();
                } else {
                    stopRecording();
                }
            });

            playbackBtn.addEventListener('click', playRecording);
            clearBtn.addEventListener('click', clearRecording);

            function startRecording() {
                isRecording = true;
                recordingStartTime = Date.now();
                recordedEvents = [];
                recordingIndicator.style.display = 'block';
                recordBtn.textContent = 'Stop Recording';
            }

            function stopRecording() {
                isRecording = false;
                recordingIndicator.style.display = 'none';
                recordBtn.textContent = 'Record';
            }

            function playRecording() {
                if (recordedEvents.length === 0) return;

                // Clear any existing timeouts
                playbackTimeouts.forEach(timeout => clearTimeout(timeout));
                playbackTimeouts = [];

                // Sort events by time
                const sortedEvents = [...recordedEvents].sort((a, b) => a.time - b.time);
                
                // Play each event with delay
                sortedEvents.forEach(event => {
                    const timeout = setTimeout(() => {
                        playSound(getSoundFromKey(event.key), event.key);
                    }, event.time);
                    playbackTimeouts.push(timeout);
                });
            }

            function clearRecording() {
                recordedEvents = [];
                playbackTimeouts.forEach(timeout => clearTimeout(timeout));
                playbackTimeouts = [];
            }

            // Helper to map key to sound type
            function getSoundFromKey(key) {
                const pad = drumPads.find(p => p.key === key);
                return pad ? pad.sound : '';
            }

            // Initialize with some sample sounds for demo purposes
            setTimeout(() => {
                playSound('kick', 'Q');
                playSound('snare', 'W');
                playSound('hihat', 'E');
            }, 1000);
        });
    </script>
</body>
</html>