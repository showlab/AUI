<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webcam Filter Playground</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1a2a6c, #b21f1f, #1a2a6c);
            color: white;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            padding: 20px 0;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2.8rem;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
        }

        .app-container {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        @media (min-width: 768px) {
            .app-container {
                flex-direction: row;
            }
        }

        .preview-section {
            flex: 1;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            padding: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .controls-section {
            width: 100%;
            max-width: 350px;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            padding: 25px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .video-container {
            position: relative;
            width: 100%;
            padding-top: 56.25%; /* 16:9 Aspect Ratio */
            border-radius: 10px;
            overflow: hidden;
            background: #000;
            margin-bottom: 20px;
        }

        #videoPreview {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .filter-controls {
            margin-bottom: 25px;
        }

        .control-group {
            margin-bottom: 20px;
        }

        h2 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #ffcc00;
        }

        .filter-buttons {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 12px;
            margin-bottom: 20px;
        }

        .filter-btn {
            background: rgba(255, 255, 255, 0.15);
            border: 2px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 12px 8px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            text-align: center;
        }

        .filter-btn:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: translateY(-2px);
        }

        .filter-btn.active {
            background: #ffcc00;
            color: #1a1a1a;
            border-color: #ffcc00;
            font-weight: bold;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .action-btn {
            padding: 15px;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        #captureBtn {
            background: linear-gradient(to right, #ff416c, #ff4b2b);
            color: white;
        }

        #saveBtn {
            background: linear-gradient(to right, #00b09b, #96c93d);
            color: white;
        }

        #resetBtn {
            background: linear-gradient(to right, #2193b0, #6dd5ed);
            color: white;
        }

        .action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .action-btn:active {
            transform: translateY(0);
        }

        .snapshot-section {
            margin-top: 20px;
        }

        .snapshot-container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }

        .snapshot-item {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .snapshot-item:hover {
            transform: scale(1.05);
        }

        .snapshot-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .status {
            text-align: center;
            padding: 15px;
            margin-top: 20px;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
        }

        .hidden {
            display: none;
        }

        footer {
            text-align: center;
            padding: 30px 0 20px;
            margin-top: 30px;
            font-size: 0.9rem;
            opacity: 0.7;
        }

        @media (max-width: 767px) {
            .filter-buttons {
                grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
            }
            
            h1 {
                font-size: 2.2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1 id="appTitle">Webcam Filter Playground</h1>
            <p class="subtitle">Apply fun filters to your live webcam feed. Capture moments and save your creations!</p>
        </header>

        <main class="app-container">
            <section class="preview-section">
                <div class="video-container">
                    <video id="videoPreview" autoplay playsinline></video>
                </div>
                
                <div class="status" id="statusMessage">
                    Initializing camera...
                </div>
            </section>

            <section class="controls-section">
                <div class="filter-controls">
                    <h2>Filters</h2>
                    <div class="filter-buttons" id="filterButtons">
                        <button class="filter-btn active" data-filter="none">None</button>
                        <button class="filter-btn" data-filter="grayscale">Grayscale</button>
                        <button class="filter-btn" data-filter="sepia">Sepia</button>
                        <button class="filter-btn" data-filter="invert">Invert</button>
                        <button class="filter-btn" data-filter="blur">Blur</button>
                        <button class="filter-btn" data-filter="hue">Hue Shift</button>
                        <button class="filter-btn" data-filter="brightness">Bright</button>
                        <button class="filter-btn" data-filter="contrast">Contrast</button>
                    </div>
                </div>

                <div class="action-buttons">
                    <button id="captureBtn" class="action-btn">
                        <span>ðŸ“¸</span> Capture Snapshot
                    </button>
                    <button id="saveBtn" class="action-btn hidden">
                        <span>ðŸ’¾</span> Save Image
                    </button>
                    <button id="resetBtn" class="action-btn">
                        <span>ðŸ”„</span> Reset Filters
                    </button>
                </div>

                <div class="snapshot-section">
                    <h2>Snapshots</h2>
                    <div class="snapshot-container" id="snapshotContainer">
                        <!-- Snapshots will be added here dynamically -->
                    </div>
                </div>
            </section>
        </main>

        <footer>
            <p>Webcam Filter Playground &copy; 2023 | All filters applied in real-time</p>
        </footer>
    </div>

    <script>
        // DOM Elements
        const video = document.getElementById('videoPreview');
        const statusMessage = document.getElementById('statusMessage');
        const filterButtons = document.querySelectorAll('.filter-btn');
        const captureBtn = document.getElementById('captureBtn');
        const saveBtn = document.getElementById('saveBtn');
        const resetBtn = document.getElementById('resetBtn');
        const snapshotContainer = document.getElementById('snapshotContainer');

        // State variables
        let currentFilter = 'none';
        let capturedImage = null;

        // Initialize the webcam
        async function initCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        width: { ideal: 1280 },
                        height: { ideal: 720 }
                    } 
                });
                video.srcObject = stream;
                statusMessage.textContent = 'Camera ready! Select a filter.';
            } catch (err) {
                console.error('Error accessing webcam:', err);
                statusMessage.textContent = 'Error: Could not access camera. Please check permissions.';
            }
        }

        // Apply filter to video
        function applyFilter(filterName) {
            switch(filterName) {
                case 'grayscale':
                    video.style.filter = 'grayscale(100%)';
                    break;
                case 'sepia':
                    video.style.filter = 'sepia(100%)';
                    break;
                case 'invert':
                    video.style.filter = 'invert(100%)';
                    break;
                case 'blur':
                    video.style.filter = 'blur(3px)';
                    break;
                case 'hue':
                    video.style.filter = 'hue-rotate(180deg)';
                    break;
                case 'brightness':
                    video.style.filter = 'brightness(150%)';
                    break;
                case 'contrast':
                    video.style.filter = 'contrast(200%)';
                    break;
                default:
                    video.style.filter = 'none';
            }
            currentFilter = filterName;
        }

        // Capture snapshot
        function captureSnapshot() {
            const canvas = document.createElement('canvas');
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            const ctx = canvas.getContext('2d');
            
            // Draw current video frame
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
            
            // Convert to data URL
            const imageData = canvas.toDataURL('image/png');
            
            // Store captured image
            capturedImage = imageData;
            
            // Update UI
            saveBtn.classList.remove('hidden');
            statusMessage.textContent = 'Snapshot captured! Click "Save Image" to download.';
            
            // Add to snapshots gallery
            addSnapshotToGallery(imageData);
        }

        // Add snapshot to gallery
        function addSnapshotToGallery(imageData) {
            const snapshotItem = document.createElement('div');
            snapshotItem.className = 'snapshot-item';
            
            const img = document.createElement('img');
            img.src = imageData;
            img.alt = 'Captured snapshot';
            
            snapshotItem.appendChild(img);
            snapshotContainer.prepend(snapshotItem);
            
            // Add click event to restore snapshot
            snapshotItem.addEventListener('click', () => {
                // In a real app, we would restore the snapshot
                // For this demo, we'll just show a message
                statusMessage.textContent = 'Snapshot restored from gallery!';
            });
        }

        // Save image
        function saveImage() {
            if (!capturedImage) return;
            
            const link = document.createElement('a');
            link.download = `webcam-filter-${Date.now()}.png`;
            link.href = capturedImage;
            link.click();
            
            statusMessage.textContent = 'Image saved successfully!';
        }

        // Reset filters
        function resetFilters() {
            applyFilter('none');
            saveBtn.classList.add('hidden');
            capturedImage = null;
            statusMessage.textContent = 'Filters reset. Select a new filter.';
            
            // Remove active class from all buttons except "None"
            filterButtons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.filter === 'none') {
                    btn.classList.add('active');
                }
            });
        }

        // Event Listeners
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons
                filterButtons.forEach(btn => btn.classList.remove('active'));
                
                // Add active class to clicked button
                button.classList.add('active');
                
                // Apply selected filter
                applyFilter(button.dataset.filter);
                statusMessage.textContent = `Applied ${button.dataset.filter} filter`;
            });
        });

        captureBtn.addEventListener('click', captureSnapshot);
        saveBtn.addEventListener('click', saveImage);
        resetBtn.addEventListener('click', resetFilters);

        // Initialize the app
        window.addEventListener('load', () => {
            initCamera();
        });
    </script>
</body>
</html>