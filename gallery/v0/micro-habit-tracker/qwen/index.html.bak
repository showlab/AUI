<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Micro Habit Tracker</title>
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --success: #4cc9f0;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --light-gray: #e9ecef;
            --border-radius: 8px;
            --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
            color: var(--dark);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            padding: 20px 0;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2.5rem;
            color: var(--secondary);
            margin-bottom: 10px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .subtitle {
            color: var(--gray);
            font-size: 1.1rem;
        }

        .app-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }

        @media (max-width: 768px) {
            .app-container {
                grid-template-columns: 1fr;
            }
        }

        .card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 25px;
            transition: var(--transition);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-size: 1.5rem;
            color: var(--secondary);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--light-gray);
        }

        .habit-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 25px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        label {
            font-weight: 600;
            color: var(--dark);
        }

        input, select {
            padding: 12px;
            border: 2px solid var(--light-gray);
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
        }

        input:focus, select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }

        button {
            padding: 12px 20px;
            border: none;
            border-radius: var(--border-radius);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--secondary);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: var(--light-gray);
            color: var(--dark);
        }

        .btn-secondary:hover {
            background: #dee2e6;
        }

        .btn-success {
            background: var(--success);
            color: white;
        }

        .btn-success:hover {
            opacity: 0.9;
        }

        .habit-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .habit-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: var(--border-radius);
            background: var(--light);
            transition: var(--transition);
            border-left: 4px solid var(--primary);
        }

        .habit-item:hover {
            background: #e9f7fe;
        }

        .habit-info {
            flex: 1;
        }

        .habit-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .habit-stats {
            display: flex;
            gap: 15px;
            font-size: 0.9rem;
            color: var(--gray);
        }

        .streak {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .habit-actions {
            display: flex;
            gap: 10px;
        }

        .action-btn {
            padding: 8px 12px;
            font-size: 0.9rem;
        }

        .checkmark {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            border: 2px solid var(--gray);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
        }

        .checkmark.checked {
            background: var(--success);
            border-color: var(--success);
        }

        .checkmark.checked::after {
            content: "âœ“";
            color: white;
            font-weight: bold;
        }

        .skip-btn {
            background: #ff6b6b;
            color: white;
        }

        .skip-btn:hover {
            background: #ff5252;
        }

        .chart-container {
            margin-top: 20px;
            height: 200px;
            position: relative;
        }

        .chart-bar {
            position: absolute;
            bottom: 0;
            width: 20px;
            background: var(--primary);
            border-radius: 4px 4px 0 0;
            transition: height 0.5s ease;
        }

        .chart-label {
            position: absolute;
            bottom: -25px;
            left: 0;
            right: 0;
            text-align: center;
            font-size: 0.8rem;
            color: var(--gray);
        }

        .export-import {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 20px;
        }

        .file-input {
            display: none;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .stat-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 15px;
            text-align: center;
            box-shadow: var(--box-shadow);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
        }

        .stat-label {
            font-size: 0.9rem;
            color: var(--gray);
        }

        .empty-state {
            text-align: center;
            padding: 30px;
            color: var(--gray);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        footer {
            text-align: center;
            margin-top: 40px;
            padding: 20px;
            color: var(--gray);
            font-size: 0.9rem;
        }

        .highlight {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: var(--border-radius);
            background: var(--success);
            color: white;
            box-shadow: var(--box-shadow);
            transform: translateX(200%);
            transition: transform 0.3s ease;
            z-index: 1000;
        }

        .notification.show {
            transform: translateX(0);
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1 id="app-title">Micro Habit Tracker</h1>
            <p class="subtitle">Build small habits, create big changes</p>
        </header>

        <div class="app-container">
            <div class="card">
                <h2 class="card-title">Add New Habit</h2>
                <form id="habit-form" class="habit-form">
                    <div class="form-group">
                        <label for="habit-name">Habit Name</label>
                        <input type="text" id="habit-name" placeholder="e.g., Drink water" required>
                    </div>
                    <div class="form-group">
                        <label for="habit-frequency">Frequency</label>
                        <select id="habit-frequency">
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                        </select>
                    </div>
                    <button type="submit" class="btn-primary" id="add-habit-btn">
                        <span>Add Habit</span>
                    </button>
                </form>

                <h2 class="card-title">Your Habits</h2>
                <div id="habit-list" class="habit-list">
                    <!-- Habit items will be added here dynamically -->
                </div>
            </div>

            <div class="card">
                <h2 class="card-title">Progress Overview</h2>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value" id="total-habits">0</div>
                        <div class="stat-label">Total Habits</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="active-streak">0</div>
                        <div class="stat-label">Current Streak</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="completed-today">0</div>
                        <div class="stat-label">Completed Today</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="longest-streak">0</div>
                        <div class="stat-label">Longest Streak</div>
                    </div>
                </div>

                <h2 class="card-title">Weekly Progress</h2>
                <div class="chart-container" id="progress-chart">
                    <!-- Chart bars will be generated here -->
                </div>

                <div class="export-import">
                    <h2 class="card-title">Export/Import Data</h2>
                    <div style="display: flex; gap: 10px;">
                        <button class="btn-primary" id="export-btn">
                            Export Data
                        </button>
                        <button class="btn-secondary" id="import-btn">
                            Import Data
                        </button>
                        <input type="file" id="file-input" class="file-input" accept=".json">
                    </div>
                </div>
            </div>
        </div>

        <footer>
            <p>Micro Habit Tracker &copy; 2023 | Build better habits, one day at a time</p>
        </footer>
    </div>

    <div class="notification" id="notification">Data saved successfully!</div>

    <script>
        // Sample data for demo purposes
        const sampleData = [
            {
                id: 1,
                name: "Drink Water",
                frequency: "daily",
                streak: 5,
                longestStreak: 7,
                completedDates: ["2023-06-01", "2023-06-02", "2023-06-03", "2023-06-04", "2023-06-05"],
                skippedDates: []
            },
            {
                id: 2,
                name: "Morning Meditation",
                frequency: "daily",
                streak: 3,
                longestStreak: 5,
                completedDates: ["2023-06-01", "2023-06-02", "2023-06-03"],
                skippedDates: ["2023-06-04"]
            },
            {
                id: 3,
                name: "Exercise",
                frequency: "daily",
                streak: 0,
                longestStreak: 2,
                completedDates: [],
                skippedDates: ["2023-06-01", "2023-06-02"]
            },
            {
                id: 4,
                name: "Read 10 Pages",
                frequency: "daily",
                streak: 2,
                longestStreak: 4,
                completedDates: ["2023-06-01", "2023-06-02"],
                skippedDates: ["2023-06-03"]
            }
        ];

        // App state
        let habits = JSON.parse(localStorage.getItem('habits')) || sampleData;
        let currentStreak = 0;

        // DOM Elements
        const habitForm = document.getElementById('habit-form');
        const habitList = document.getElementById('habit-list');
        const addHabitBtn = document.getElementById('add-habit-btn');
        const exportBtn = document.getElementById('export-btn');
        const importBtn = document.getElementById('import-btn');
        const fileInput = document.getElementById('file-input');
        const notification = document.getElementById('notification');
        const totalHabitsEl = document.getElementById('total-habits');
        const activeStreakEl = document.getElementById('active-streak');
        const completedTodayEl = document.getElementById('completed-today');
        const longestStreakEl = document.getElementById('longest-streak');
        const progressChart = document.getElementById('progress-chart');

        // Initialize the app
        function init() {
            renderHabits();
            updateStats();
            renderChart();
            
            // Event listeners
            habitForm.addEventListener('submit', handleAddHabit);
            exportBtn.addEventListener('click', exportData);
            importBtn.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', importData);
        }

        // Handle adding a new habit
        function handleAddHabit(e) {
            e.preventDefault();
            
            const name = document.getElementById('habit-name').value.trim();
            const frequency = document.getElementById('habit-frequency').value;
            
            if (!name) return;
            
            const newHabit = {
                id: Date.now(),
                name,
                frequency,
                streak: 0,
                longestStreak: 0,
                completedDates: [],
                skippedDates: []
            };
            
            habits.push(newHabit);
            saveToLocalStorage();
            renderHabits();
            updateStats();
            renderChart();
            
            // Reset form
            habitForm.reset();
            
            showNotification('Habit added successfully!');
        }

        // Render all habits
        function renderHabits() {
            habitList.innerHTML = '';
            
            if (habits.length === 0) {
                habitList.innerHTML = `
                    <div class="empty-state">
                        <div>ðŸ“‹</div>
                        <p>No habits yet. Add your first habit to get started!</p>
                    </div>
                `;
                return;
            }
            
            habits.forEach(habit => {
                const habitElement = document.createElement('div');
                habitElement.className = 'habit-item';
                habitElement.id = `habit-${habit.id}`;
                
                // Check if today is completed
                const today = new Date().toISOString().split('T')[0];
                const isCompletedToday = habit.completedDates.includes(today);
                const isSkippedToday = habit.skippedDates.includes(today);
                
                habitElement.innerHTML = `
                    <div class="habit-info">
                        <div class="habit-name">${habit.name}</div>
                        <div class="habit-stats">
                            <div class="streak">
                                ðŸ”¥ ${habit.streak} day streak
                            </div>
                            <div>
                                ðŸ“ˆ Longest: ${habit.longestStreak}
                            </div>
                        </div>
                    </div>
                    <div class="habit-actions">
                        <div class="checkmark ${isCompletedToday ? 'checked' : ''}" 
                             data-id="${habit.id}" 
                             data-action="toggle"
                             title="${isCompletedToday ? 'Mark as incomplete' : 'Mark as complete'}">
                        </div>
                        <button class="action-btn skip-btn" 
                                data-id="${habit.id}" 
                                data-action="skip"
                                title="Skip today">
                            Skip
                        </button>
                        <button class="action-btn btn-secondary" 
                                data-id="${habit.id}" 
                                data-action="edit"
                                title="Edit habit">
                            Edit
                        </button>
                        <button class="action-btn btn-secondary" 
                                data-id="${habit.id}" 
                                data-action="delete"
                                title="Delete habit">
                            âœ•
                        </button>
                    </div>
                `;
                
                habitList.appendChild(habitElement);
            });
            
            // Add event listeners to action buttons
            document.querySelectorAll('.checkmark').forEach(el => {
                el.addEventListener('click', toggleHabitCompletion);
            });
            
            document.querySelectorAll('[data-action="skip"]').forEach(el => {
                el.addEventListener('click', skipDay);
            });
            
            document.querySelectorAll('[data-action="edit"]').forEach(el => {
                el.addEventListener('click', editHabit);
            });
            
            document.querySelectorAll('[data-action="delete"]').forEach(el => {
                el.addEventListener('click', deleteHabit);
            });
        }

        // Toggle habit completion
        function toggleHabitCompletion(e) {
            const habitId = parseInt(e.target.dataset.id);
            const habit = habits.find(h => h.id === habitId);
            
            if (!habit) return;
            
            const today = new Date().toISOString().split('T')[0];
            const isCompletedToday = habit.completedDates.includes(today);
            
            if (isCompletedToday) {
                // Remove from completed dates
                habit.completedDates = habit.completedDates.filter(date => date !== today);
                habit.streak = Math.max(0, habit.streak - 1);
            } else {
                // Add to completed dates
                habit.completedDates.push(today);
                habit.streak += 1;
                if (habit.streak > habit.longestStreak) {
                    habit.longestStreak = habit.streak;
                }
            }
            
            saveToLocalStorage();
            renderHabits();
            updateStats();
            renderChart();
            
            showNotification(isCompletedToday ? 'Habit marked as incomplete' : 'Habit completed! Great job!');
        }

        // Skip day for a habit
        function skipDay(e) {
            const habitId = parseInt(e.target.dataset.id);
            const habit = habits.find(h => h.id === habitId);
            
            if (!habit) return;
            
            const today = new Date().toISOString().split('T')[0];
            
            // If already skipped, remove skip
            if (habit.skippedDates.includes(today)) {
                habit.skippedDates = habit.skippedDates.filter(date => date !== today);
                habit.streak = Math.max(0, habit.streak - 1);
            } else {
                // Add to skipped dates
                habit.skippedDates.push(today);
                habit.streak = 0; // Reset streak when skipping
            }
            
            saveToLocalStorage();
            renderHabits();
            updateStats();
            renderChart();
            
            showNotification('Day skipped');
        }

        // Edit habit (placeholder for future implementation)
        function editHabit(e) {
            const habitId = parseInt(e.target.dataset.id);
            const habit = habits.find(h => h.id === habitId);
            
            if (!habit) return;
            
            const newName = prompt('Edit habit name:', habit.name);
            if (newName && newName.trim() !== '') {
                habit.name = newName.trim();
                saveToLocalStorage();
                renderHabits();
                showNotification('Habit updated');
            }
        }

        // Delete habit
        function deleteHabit(e) {
            const habitId = parseInt(e.target.dataset.id);
            const habitIndex = habits.findIndex(h => h.id === habitId);
            
            if (habitIndex !== -1) {
                habits.splice(habitIndex, 1);
                saveToLocalStorage();
                renderHabits();
                updateStats();
                renderChart();
                showNotification('Habit deleted');
            }
        }

        // Update statistics
        function updateStats() {
            totalHabitsEl.textContent = habits.length;
            
            // Calculate active streak (consecutive days)
            let activeStreak = 0;
            const today = new Date();
            let consecutiveDays = 0;
            
            // Get today's date string
            const todayStr = today.toISOString().split('T')[0];
            
            // Check if all habits were completed today
            const allCompleted = habits.every(habit => 
                habit.completedDates.includes(todayStr)
            );
            
            if (allCompleted) {
                activeStreak = 1;
            }
            
            // Find longest streak among all habits
            const longestStreak = Math.max(...habits.map(h => h.longestStreak), 0);
            longestStreakEl.textContent = longestStreak;
            
            // Count completed today
            const completedToday = habits.filter(habit => 
                habit.completedDates.includes(todayStr)
            ).length;
            completedTodayEl.textContent = completedToday;
            
            activeStreakEl.textContent = activeStreak;
        }

        // Render progress chart
        function renderChart() {
            progressChart.innerHTML = '';
            
            if (habits.length === 0) return;
            
            // Generate last 7 days
            const days = [];
            const today = new Date();
            
            for (let i = 6; i >= 0; i--) {
                const date = new Date();
                date.setDate(today.getDate() - i);
                days.push(date.toISOString().split('T')[0]);
            }
            
            // Create chart bars
            const maxCompletions = Math.max(
                ...habits.map(habit => 
                    days.filter(day => habit.completedDates.includes(day)).length
                )
            ) || 1;
            
            days.forEach((day, index) => {
                const completions = habits.filter(habit => 
                    habit.completedDates.includes(day)
                ).length;
                
                const barHeight = (completions / maxCompletions) * 100;
                
                const bar = document.createElement('div');
                bar.className = 'chart-bar';
                bar.style.left = `${index * 30 + 10}px`;
                bar.style.height = `${barHeight}%`;
                bar.title = `${completions} habits completed`;
                
                const label = document.createElement('div');
                label.className = 'chart-label';
                label.textContent = day.split('-')[2]; // Day number
                
                progressChart.appendChild(bar);
                progressChart.appendChild(label);
            });
        }

        // Export data
        function exportData() {
            const dataStr = JSON.stringify(habits, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = 'micro-habit-tracker-data.json';
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
            
            showNotification('Data exported successfully!');
        }

        // Import data
        function importData(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const importedData = JSON.parse(e.target.result);
                    if (Array.isArray(importedData)) {
                        habits = importedData;
                        saveToLocalStorage();
                        renderHabits();
                        updateStats();
                        renderChart();
                        showNotification('Data imported successfully!');
                    } else {
                        throw new Error('Invalid data format');
                    }
                } catch (error) {
                    alert('Error importing data: Invalid file format');
                }
            };
            reader.readAsText(file);
        }

        // Save to localStorage
        function saveToLocalStorage() {
            localStorage.setItem('habits', JSON.stringify(habits));
        }

        // Show notification
        function showNotification(message) {
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Initialize the app when DOM is loaded
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>