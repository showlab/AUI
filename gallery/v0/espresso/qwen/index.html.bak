    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Animation on scroll
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.feature-card, .step, .testimonial-card, .pricing-card').forEach(el => {
            observer.observe(el);
        });

        // Button click handlers
        document.getElementById('signup-button').addEventListener('click', function() {
            alert('Starting your free trial process...');
            // In a real app, this would redirect to signup page
        });

        document.getElementById('premium-signup').addEventListener('click', function() {
            alert('You\'ve selected the Professional plan! Starting your 6-month free trial...');
            // In a real app, this would redirect to checkout
        });

        document.getElementById('final-signup').addEventListener('click', function() {
            alert('Thank you for choosing BrewCraft! Your 6-month free trial begins now.');
            // In a real app, this would redirect to checkout
        });

        // Pricing card interaction
        document.querySelectorAll('.pricing-card button').forEach(button => {
            button.addEventListener('click', function() {
                const planName = this.parentElement.querySelector('h3').textContent;
                alert(`You've selected the ${planName} plan!`);
            });
        });

